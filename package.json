{
  "name": "junit-live-spec",
  "version": "0.0.1",
  "description": "Generate live spec from feature files & JUnit test results",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest --color",
    "build": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thlcodes/junit-live-spec.git"
  },
  "keywords": [
    "junit",
    "cucumber",
    "feature",
    "live",
    "spec"
  ],
  "author": "Thomas Liebeskind <thomas.liebeskind@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thlcodes/junit-live-spec/issues"
  },
  "homepage": "https://github.com/thlcodes/junit-live-spec#README.md",
  "dependencies": {
    "@cucumber/cucumber": "^7.3.2",
    "@cucumber/gherkin-streams": "^4.0.0",
    "@cucumber/messages": "^17.1.1",
    "@types/command-line-args": "^5.2.0",
    "@types/xml2js": "^0.4.9",
    "chalk": "^4.1.2",
    "command-line-args": "^5.2.1",
    "gherkin": "^9.0.0",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "eslint": "^8.10.0",
    "jest": "^27.5.1",
    "ts-jest": "^27.1.3"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.ts"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ]
  },
  "eslintConfig": {
    "env": {
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "indent": [
        "error",
        4
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  },
  "types": "dist/index.d.ts"
}
